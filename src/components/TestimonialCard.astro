---
interface Props {
  quote: string
  name: string
  context?: string
}

const { quote, name, context } = Astro.props
---

<div class="border border-[var(--color-border)] bg-[var(--color-surface)] p-8">
  <div class="mb-4 font-['Cormorant_Garamond',serif] text-3xl leading-none text-[var(--color-accent)]">"</div>
  <p class="text-[var(--color-text-medium)] leading-relaxed">{quote}</p>
  <div class="mt-6 flex items-center gap-3">
    <div class="h-px flex-1 bg-[var(--color-border)]"></div>
    <div class="text-right">
      <p class="text-sm font-medium text-[var(--color-primary)]">{name}</p>
      {context && <p class="text-xs text-[var(--color-text-light)]">{context}</p>}
    </div>
  </div>
</div>

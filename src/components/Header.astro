---
import { getLangFromUrl, useTranslations, getAlternateLang, getLocalizedPath } from "~/i18n/utils"

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
const altLang = getAlternateLang(lang)
const altPath = getLocalizedPath("/", altLang)
---

<header class="fixed top-0 z-50 w-full bg-[var(--color-surface)]/80 backdrop-blur-md border-b border-[var(--color-border)]">
  <nav class="mx-auto flex max-w-6xl items-center justify-between px-6 py-4">
    <a href={getLocalizedPath("/", lang)} class="text-xl font-light tracking-wider uppercase">
      Amawe
    </a>

    <div class="flex items-center gap-8">
      <a href={getLocalizedPath("/", lang)} class="text-sm tracking-wide hover:text-[var(--color-accent)] transition-colors">
        {t("nav.home")}
      </a>
      <a href={altPath} class="text-sm tracking-wide border border-[var(--color-border)] px-3 py-1 hover:bg-[var(--color-primary)] hover:text-[var(--color-surface)] transition-colors">
        {t("nav.language")}
      </a>
    </div>
  </nav>
</header>

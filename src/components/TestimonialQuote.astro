---
interface Props {
  quote: string
  author?: string
  bg?: "default" | "warm" | "sage"
}

const { quote, author, bg = "default" } = Astro.props

const bgClass = {
  default: "bg-[var(--color-background)]",
  warm: "bg-[var(--color-warm)]",
  sage: "bg-[var(--color-sage-light)]",
}[bg]
---

<section class={`${bgClass} py-20 md:py-28`}>
  <div class="mx-auto max-w-3xl px-6 text-center">
    <div class="divider mx-auto mb-8"></div>
    <blockquote class="text-2xl md:text-3xl">
      "{quote}"
    </blockquote>
    {author && (
      <p class="section-label mt-8">{author}</p>
    )}
    <div class="divider mx-auto mt-8"></div>
  </div>
</section>

---
import Layout from "~/layouts/Layout.astro"
import Header from "~/components/Header.astro"
import Footer from "~/components/Footer.astro"
import TestimonialCard from "~/components/TestimonialCard.astro"
import ValueStack from "~/components/ValueStack.astro"
import NewsletterSignup from "~/components/NewsletterSignup.astro"
import { getLangFromUrl, useTranslations } from "~/i18n/utils"

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)

const problems = [
  t("ei.problem.1"),
  t("ei.problem.2"),
  t("ei.problem.3"),
  t("ei.problem.4"),
]

const pillars = [
  { title: t("ei.pillar.1.title"), text: t("ei.pillar.1.text"), num: "01", icon: "ðŸŒ¿" },
  { title: t("ei.pillar.2.title"), text: t("ei.pillar.2.text"), num: "02", icon: "ðŸ¤¸" },
  { title: t("ei.pillar.3.title"), text: t("ei.pillar.3.text"), num: "03", icon: "ðŸ§ " },
  { title: t("ei.pillar.4.title"), text: t("ei.pillar.4.text"), num: "04", icon: "ðŸŽ¯" },
]

const bonuses = [
  t("ei.bonus.1"),
  t("ei.bonus.2"),
  t("ei.bonus.3"),
  t("ei.bonus.4"),
  t("ei.bonus.5"),
  t("ei.bonus.6"),
]

const valueStackItems = [
  { label: "12 seances de coaching de groupe", value: "1 200 EUR" },
  { label: "6 coachings individualises hot seat", value: "600 EUR" },
  { label: "Immersion 2 jours a Montpellier", value: "400 EUR" },
  { label: "Immersion 4 jours en nature (Aveyron)", value: "800 EUR" },
  { label: "Bibliotheque videos mouvement", value: "200 EUR" },
  { label: "Recettes sante + listes de courses", value: "150 EUR" },
  { label: "Groupe WhatsApp prive", value: "Offert" },
  { label: "Suivi post-programme M+1", value: "150 EUR" },
  { label: "6 bonus (experts, reunion alumni...)", value: "300 EUR" },
]


---

<Layout
  title={`${t("ei.title")} â€” Amawe`}
  description={t("ei.subtitle")}
>
  <Header />
  <main class="pt-20">

    <!-- ============================================
         HERO â€” Full-impact with image background
         ============================================ -->
    <section class="relative min-h-[85vh] flex items-center overflow-hidden">
      <img
        src="/images/ecolieu-paysage.webp"
        alt=""
        role="presentation"
        class="absolute inset-0 h-full w-full object-cover"
      />
      <div class="gradient-overlay"></div>
      <div class="relative z-10 mx-auto max-w-4xl px-6 py-24">
        <span class="badge-urgency mb-6 inline-block">Places limitees â€” Prochaine session : 20 avril 2026</span>
        <h1 class="text-5xl text-[var(--color-surface)] md:text-7xl">{t("ei.title")}</h1>
        <p class="mt-6 max-w-2xl font-['Cormorant_Garamond',serif] text-xl text-[var(--color-surface)]/80 md:text-2xl">
          Retrouve une energie durable, un corps qui repond, un mental apaise â€” en 3 mois d'accompagnement holistique.
        </p>
        <div class="mt-10 flex flex-col gap-4 sm:flex-row sm:items-center">
          <a href="/bon-de-commande/" class="btn-accent">{t("ei.cta")}</a>
          <p class="text-sm text-[var(--color-surface)]/60">{t("ei.cta.note")}</p>
        </div>
      </div>
    </section>

    <!-- ============================================
         SOCIAL PROOF BAR
         ============================================ -->
    <section class="border-y border-[var(--color-border)] bg-[var(--color-surface)]">
      <div class="mx-auto grid max-w-4xl grid-cols-3 divide-x divide-[var(--color-border)]">
        <div class="px-4 py-6 text-center">
          <p class="font-['Cormorant_Garamond',serif] text-2xl text-[var(--color-accent)] md:text-3xl">3 500+</p>
          <p class="section-label mt-1 text-[0.6rem]">personnes accompagnees</p>
        </div>
        <div class="px-4 py-6 text-center">
          <p class="font-['Cormorant_Garamond',serif] text-2xl text-[var(--color-sage)] md:text-3xl">3 mois</p>
          <p class="section-label mt-1 text-[0.6rem]">d'accompagnement</p>
        </div>
        <div class="px-4 py-6 text-center">
          <p class="font-['Cormorant_Garamond',serif] text-2xl text-[var(--color-accent)] md:text-3xl">2</p>
          <p class="section-label mt-1 text-[0.6rem]">immersions en presentiel</p>
        </div>
      </div>
    </section>

    <!-- ============================================
         PROBLEM â€” Are you surviving instead of living?
         ============================================ -->
    <section class="bg-[var(--color-primary)] py-20 md:py-28">
      <div class="mx-auto max-w-4xl px-6">
        <p class="section-label mb-4 text-center text-[var(--color-accent)]">{t("ei.problem.label")}</p>
        <h2 class="text-center text-4xl text-[var(--color-surface)] md:text-5xl">{t("ei.problem.title")}</h2>
        <div class="mt-12 space-y-4">
          {problems.map((problem) => (
            <div class="flex items-start gap-4 border-l-2 border-[var(--color-accent)] bg-[var(--color-surface)]/5 px-6 py-5">
              <span class="mt-0.5 text-lg text-[var(--color-accent)]">â€”</span>
              <p class="text-[var(--color-surface)]/80">{problem}</p>
            </div>
          ))}
        </div>
        <p class="mt-10 text-center font-['Cormorant_Garamond',serif] text-2xl italic text-[var(--color-accent)]">
          Il existe un autre chemin.
        </p>
      </div>
    </section>

    <!-- ============================================
         TRANSFORMATION â€” What if you could...
         ============================================ -->
    <section class="bg-[var(--color-sage-light)] py-20 md:py-28">
      <div class="mx-auto max-w-3xl px-6 text-center">
        <p class="section-label mb-4 text-[var(--color-sage-dark)]">ET SI...</p>
        <h2 class="text-4xl md:text-5xl">Imagine une version de toi</h2>
        <div class="divider mx-auto mt-6 mb-10" style="background-color: var(--color-sage);"></div>
        <div class="space-y-4 text-left">
          <p class="flex items-start gap-3 text-lg text-[var(--color-text-medium)]">
            <span class="mt-1 text-[var(--color-sage)]">âœ¦</span>
            Qui se reveille avec de l'energie, sans alarme, sans cafe en perfusion
          </p>
          <p class="flex items-start gap-3 text-lg text-[var(--color-text-medium)]">
            <span class="mt-1 text-[var(--color-sage)]">âœ¦</span>
            Dont le corps est un allie, pas un obstacle
          </p>
          <p class="flex items-start gap-3 text-lg text-[var(--color-text-medium)]">
            <span class="mt-1 text-[var(--color-sage)]">âœ¦</span>
            Qui sait exactement quoi manger, comment bouger, comment gerer son stress
          </p>
          <p class="flex items-start gap-3 text-lg text-[var(--color-text-medium)]">
            <span class="mt-1 text-[var(--color-sage)]">âœ¦</span>
            Qui a retrouve la joie de vivre et la liberte dans son quotidien
          </p>
        </div>
        <p class="mt-10 font-['Cormorant_Garamond',serif] text-xl italic text-[var(--color-sage-dark)]">
          C'est exactement ce que Energie Illimitee va t'aider a construire.
        </p>
      </div>
    </section>

    <!-- ============================================
         4 PILLARS
         ============================================ -->
    <section class="py-20 md:py-28">
      <div class="mx-auto max-w-6xl px-6">
        <p class="section-label mb-4 text-center">{t("ei.pillars.label")}</p>
        <h2 class="text-center text-4xl md:text-5xl">{t("ei.pillars.title")}</h2>
        <div class="divider mx-auto mt-6 mb-16"></div>

        <div class="grid gap-8 md:grid-cols-2">
          {pillars.map((pillar) => (
            <div class="border border-[var(--color-border)] bg-[var(--color-surface)] p-8 transition-shadow duration-300 hover:shadow-lg">
              <div class="flex items-center gap-4 mb-4">
                <span class="text-2xl">{pillar.icon}</span>
                <span class="font-['Cormorant_Garamond',serif] text-4xl font-light text-[var(--color-border)]">{pillar.num}</span>
              </div>
              <h3 class="text-xl">{pillar.title}</h3>
              <p class="mt-3 text-[var(--color-text-medium)]">{pillar.text}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- ============================================
         TEMOIGNAGES
         ============================================ -->
    <section class="bg-[var(--color-warm)] py-20 md:py-28">
      <div class="mx-auto max-w-6xl px-6">
        <p class="section-label mb-4 text-center">CE QUE CA A CHANGE CHEZ ELLES</p>
        <h2 class="text-center text-4xl md:text-5xl">Temoignages</h2>
        <div class="divider mx-auto mt-6 mb-12"></div>

        <div class="grid gap-8 md:grid-cols-2">
          <TestimonialCard
            quote="Ce stage a ete declencheur pour moi, beaucoup de changements ont ete entrepris. Claire m'avait dit que je ressortirais differente a la fin de ce stage. OUI, je me souviendrai de ce stage toute ma vie !"
            name="Severine"
            context="Stage Amawe"
          />
          <TestimonialCard
            quote="Un stage qui a lance le debut de changements d'ampleur. Je vis un peu plus pres du sol et de mes ressentis, je danse un peu toute seule... J'integre ce mantra : I am everything I want to be."
            name="Helene"
            context="Stage & Retraite"
          />
          <TestimonialCard
            quote="Merci pour ce stage qui m'a apporte une vision globale de ma sante. Je ne vous remercierai jamais assez pour tout ce que j'ai appris !"
            name="Celine"
            context="Stage sante holistique"
          />
          <TestimonialCard
            quote="J'ai retrouve le gout de cuisiner, des plats savoureux. On est loin des regimes ! Et pourtant -10 kilos ! Tout ca sans privation, c'est juste incroyable !"
            name="Izadora"
            context="Programme nutrition"
          />
        </div>
      </div>
    </section>

    <!-- ============================================
         FORMAT â€” How it works (visual)
         ============================================ -->
    <section class="py-20 md:py-28">
      <div class="mx-auto max-w-6xl px-6">
        <div class="grid items-start gap-12 md:grid-cols-2 md:gap-20">
          <div>
            <p class="section-label mb-4">{t("ei.format.label")}</p>
            <h2 class="text-4xl md:text-5xl">{t("ei.format.title")}</h2>
            <div class="divider mt-6"></div>
            <div class="mt-8 space-y-5">
              <div class="flex items-start gap-4 border-l-2 border-[var(--color-sage)] pl-6 py-2">
                <div>
                  <p class="font-medium text-[var(--color-primary)]">Coaching de groupe</p>
                  <p class="text-sm text-[var(--color-text-medium)]">{t("ei.format.coaching")}</p>
                </div>
              </div>
              <div class="flex items-start gap-4 border-l-2 border-[var(--color-sage)] pl-6 py-2">
                <div>
                  <p class="font-medium text-[var(--color-primary)]">Hot seat individualise</p>
                  <p class="text-sm text-[var(--color-text-medium)]">{t("ei.format.hotseat")}</p>
                </div>
              </div>
              <div class="mt-4 bg-[var(--color-sage-light)] px-6 py-3 text-center">
                <p class="font-medium text-[var(--color-sage-dark)]">{t("ei.format.rhythm")}</p>
              </div>
            </div>
          </div>

          <!-- Immersions -->
          <div class="space-y-6">
            <div class="relative overflow-hidden">
              <img
                src="/images/claire-stage.webp"
                alt="Immersion Energie Illimitee a Montpellier avec Claire Orriols"
                width="1198"
                height="800"
                loading="lazy"
                class="aspect-[4/3] w-full object-cover"
              />
              <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-[var(--color-primary)] to-transparent p-6">
                <h3 class="text-lg text-[var(--color-surface)]">{t("ei.format.immersion.1.title")}</h3>
                <p class="text-sm text-[var(--color-surface)]/70">{t("ei.format.immersion.1.text")}</p>
              </div>
            </div>
            <div class="relative overflow-hidden">
              <img
                src="/images/nature-aveyron.webp"
                alt="Immersion en nature a l'ecolieu du Sud Aveyron"
                width="800"
                height="1067"
                loading="lazy"
                class="aspect-[4/3] w-full object-cover"
              />
              <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-[var(--color-primary)] to-transparent p-6">
                <h3 class="text-lg text-[var(--color-surface)]">{t("ei.format.immersion.2.title")}</h3>
                <p class="text-sm text-[var(--color-surface)]/70">{t("ei.format.immersion.2.text")}</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- ============================================
         DATES BAR
         ============================================ -->
    <section class="border-y border-[var(--color-accent)] bg-[var(--color-accent-light)] py-10">
      <div class="mx-auto flex max-w-4xl flex-col items-center gap-4 px-6 text-center md:flex-row md:justify-center md:gap-12">
        <p class="section-label text-[var(--color-accent-dark)]">{t("ei.dates.label")}</p>
        <p class="text-lg">{t("ei.dates.start")}</p>
        <span class="hidden text-[var(--color-accent)] md:inline">â€”</span>
        <p class="text-lg">{t("ei.dates.end")}</p>
        <span class="badge-urgency">{t("ei.dates.duration")}</span>
      </div>
    </section>

    <!-- ============================================
         VALUE STACK â€” Hormozi style
         ============================================ -->
    <section class="py-20 md:py-28">
      <div class="mx-auto max-w-4xl px-6">
        <p class="section-label mb-4 text-center">LA VALEUR DE CE PROGRAMME</p>
        <h2 class="text-center text-4xl md:text-5xl">Tout ce que tu recois</h2>
        <div class="divider mx-auto mt-6 mb-12"></div>

        <ValueStack
          items={valueStackItems}
          totalValue="3 800 EUR"
          actualPrice="2 000 EUR"
          earlyBirdPrice="1 350 EUR"
        />
      </div>
    </section>

    <!-- ============================================
         BONUSES
         ============================================ -->
    <section class="bg-[var(--color-sage-light)] py-20 md:py-28">
      <div class="mx-auto max-w-4xl px-6">
        <p class="section-label mb-4 text-center text-[var(--color-sage-dark)]">{t("ei.bonus.label")}</p>
        <div class="divider mx-auto mt-2 mb-12" style="background-color: var(--color-sage);"></div>
        <div class="grid gap-4 md:grid-cols-2">
          {bonuses.map((bonus) => (
            <div class="flex items-center gap-4 bg-[var(--color-surface)] px-6 py-4">
              <span class="badge-included">Offert</span>
              <p class="text-[var(--color-text-medium)]">{bonus}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- ============================================
         FINAL CTA â€” Vers le bon de commande
         ============================================ -->
    <section class="bg-[var(--color-primary)] py-20 md:py-28">
      <div class="mx-auto max-w-3xl px-6 text-center">
        <p class="font-['Cormorant_Garamond',serif] text-3xl italic text-[var(--color-surface)] md:text-4xl">
          "Tout le monde peut etre en meilleure sante."
        </p>
        <p class="mt-4 text-sm text-[var(--color-surface)]/60">â€” Claire Orriols</p>
        <div class="mt-10">
          <a href="/bon-de-commande/" class="btn-accent">Postuler au programme</a>
        </div>
        <p class="mt-4 text-xs text-[var(--color-surface)]/40">
          Places limitees â€” Prochaine session : 20 avril 2026
        </p>
      </div>
    </section>

    <!-- Newsletter -->
    <NewsletterSignup />
  </main>
  <Footer />
</Layout>
